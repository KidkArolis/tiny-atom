{
  "name": "tiny-atom",
  "version": "5.0.0-pre.0",
  "description": "Pragmatic and concise state management.",
  "main": "tiny-atom.js",
  "module": "tiny-atom.module.js",
  "modern": "tiny-atom.modern.js",
  "sideEffects": false,
  "scripts": {
    "coverage": "nyc --reporter html ava",
    "test": "npm run lint && nyc ava",
    "lint": "healthier && prettier --check '**/*.{js,json,css,yml}'",
    "format": "prettier --write '**/*.{js,json,css,yml}'",
    "build": "node ./tasks/build.js",
    "build:docs": "sitedown . -b docs-next --layout layout.html",
    "version": "npm run build",
    "release": "np --contents dist",
    "release-beta": "np --tag=beta --contents=dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KidkArolis/tiny-atom.git"
  },
  "contributors": [
    "Karolis Narkevicius <hello@kn8.lt>",
    "Alan Clarke <alan@qubit.com>"
  ],
  "license": "ISC",
  "dependencies": {
    "deep-diff": "^1.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "ava": "^2.1.0",
    "execa": "^1.0.0",
    "healthier": "^2.0.0",
    "jetpack": "^0.16.0",
    "jsdom": "^15.1.1",
    "np": "^5.0.3",
    "nyc": "^14.1.1",
    "preact": "^8.4.2",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "sitedown": "^3.3.2"
  },
  "healthier": {
    "ignore": [
      "docs/public"
    ]
  },
  "ava": {
    "files": [
      "test/test-*.js"
    ],
    "require": [
      "@babel/register",
      "./test/helpers/setup.js"
    ]
  },
  "np": {
    "releaseDraft": false
  }
}
