{
  "name": "tiny-atom",
  "version": "4.2.2",
  "description": "Pragmatic and concise state management.",
  "main": "index.js",
  "scripts": {
    "coverage": "nyc --reporter html ava",
    "test": "npm run lint && nyc ava",
    "lint": "healthier && prettier --check '**/*.{js,json,css,yml}'",
    "format": "prettier --write '**/*.{js,json,css,yml}'",
    "build": "node ./tasks/build.js",
    "version": "npm run build",
    "release": "np --contents dist",
    "release-beta": "np --tag=beta --contents=dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KidkArolis/tiny-atom.git"
  },
  "contributors": [
    "Karolis Narkevicius <hello@kn8.lt>",
    "Alan Clarke <alan@qubit.com>"
  ],
  "license": "ISC",
  "dependencies": {
    "deep-diff": "^1.0.2"
  },
  "devDependencies": {
    "ava": "^2.1.0",
    "buble": "^0.19.7",
    "execa": "^1.0.0",
    "healthier": "^2.0.0",
    "jetpack": "^0.16.0",
    "jsdom": "^15.1.1",
    "np": "^5.0.3",
    "nyc": "^14.1.1",
    "preact": "^8.4.2",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "standard": {
    "ignore": [
      "docs/public"
    ]
  },
  "ava": {
    "files": [
      "test/test-*.js"
    ],
    "require": "./test/helpers/setup.js"
  },
  "np": {
    "releaseDraft": false
  }
}
